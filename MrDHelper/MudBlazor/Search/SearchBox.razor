@using global::MudBlazor
@inherits ComponentBase

<MudTextField T="string"
              Value="@_value"
              ValueChanged="OnValueChanged"
              Placeholder="@Placeholder"
              Variant="Variant.Outlined"
              Margin="Margin.Dense"
              Adornment="Adornment.Start"
              AdornmentIcon="@Icons.Material.Filled.Search"
              Clearable="true"
              Immediate="true"
              DebounceInterval="0"
              Disabled="@(Disabled || string.IsNullOrWhiteSpace(QueryStore.ActiveKey))"
              Class="@CssClass"
              OnClearButtonClick="OnClearButtonClicked"
              OnKeyDown="OnKeyDown" />

